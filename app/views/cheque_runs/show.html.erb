<table id="cheque_run">
  <th class="date">Date</th>
  <th>Name</th>
  <th>Description</th>
  <th>Amount</th>

  <% @cheque_run.cheques.each do |cheque| %>
  <tr id="cheque_<%= cheque.id %>" class="cheque">
    <td><%=cheque.date%></td>
    <td><%=cheque.payee%></td>
    <td><%=cheque.description%></td>
    <td class="amount"><%=number_to_currency cheque.amount%></td>
    <td><%=link_to "Preview", cheque_path(cheque, :format => 'pdf'), :title => cheque.filename %></td>
  </tr>
  <% end %>
</table>

<%= link_to "Download All", cheque_run_path(@cheque_run, :format => 'zip') %>